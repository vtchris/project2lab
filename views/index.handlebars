<div class="container">
    <a href="/login" class="text-white float-right">PROMOTER LOGIN</a>
    <div class="row">
        <div class="col col-12 text-center m-5 float">

            <header>
                <div id="logo">
                    <h1>QUEEN CITY</h1>
                    <h3>Under</h3>
                </div>


            </header>

        </div>
    </div>
    <div class="row">
        
        <div class="col col-12 text-center">
            <form>
                <div class="input-group mb-2 text-center">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Start</span>
                    </div>
                    <input id="start-date" type="date" name="startDate">
                    
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text">End</span>
                    </div>
                    <input id="end-date" type="date" name="endDate">
                    
                </div>

               
                
                <button id="submit-btn" class="btn btn-lg btn-primary m-5" type="submit">Submit</button>
            </form>

        </div>
        <div class="col col-12">
         
                <img id="map">

            

            <table class="table table-secondary table-hover">
                <thead>
                    <tr>

                        <th>Date</th>
                        <th>Event</th>
                        <th>Line Up</th>
                        <th>Venue</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each events}}
                    <tr id={{this.id}} class="js_row">
                        <td> {{this.eventDateTime}}</td>
                        <td> {{this.eventName}}</td>
                        <td> {{this.lineup}}</td>
                        <td></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>




</div>

<script src="js/index.js"></script>